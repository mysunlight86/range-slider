{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb-base",
        "plugin:fsd/all"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "fsd"
    ],
    "rules": {
        "import/extensions": "off",
        "lines-between-class-members": [
            "error", "always",
            { "exceptAfterSingleLine": true }
        ],
        "no-console": "off",
        "func-names": ["error", "never"],
        "no-shadow": "off",
        "no-undef": "off",
        "max-len": [
          "error",
          {
            "code": 120,
            "ignoreUrls": true
          }
        ],
        "no-plusplus": [
            "error",
            { "allowForLoopAfterthoughts": true }
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".ts"]
            }
        }
    }
}
